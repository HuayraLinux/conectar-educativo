<div class="row">

  <div class="col-sm-3">

    {{#if item.poster}}
      <img src={{item.poster}} class="w100"/>
    {{else}}
      <img src="no_image.png" class="w100"/>
    {{/if}}
  </div>

  <div class="col-sm-9">
    <h1 class='huayra-item-resultado-titulo'>{{plain item.titulo}}</h1>

    <p>Duración: {{item.duracion}} minutos</p>
    <p>Descripción: {{plain item.descripcion}}</p>

    <p>
      {{#if item.video_sd}}
        {{#link-to "buscar.resultado.visualizar" item (query-params type="sd") class="btn btn-default"}}Reproducir SD{{/link-to}}
      {{/if}}

      {{#if item.video_hd}}
        {{#link-to "buscar.resultado.visualizar" item (query-params type="hd") class="btn btn-default"}}Reproducir HD{{/link-to}}
      {{/if}}

      {{#if noVideo}}
        <button class="btn btn-default" disabled>Sin videos</button>
      {{/if}}

    </p>

  </div>

{{!item.id}}
{{!item.video_sd}}
{{!item.video_hd}}

</div>
